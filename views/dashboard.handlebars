<ul class="nav justify-content-end" id="topLinks">
  <li class="nav-item">
    <a class="nav-link disabled" href="/edit">Edit</a>
  </li>
  <li class="nav-item">
    <a class="nav-link disabled" href="/logout">Logout</a>
  </li>
</ul>

<div class="container">
  <div class="row" id="addHouse">
    <div id="form">
      <h2>Add a favorite house</h2>
      <form class="create-update-form" action="/houses" method="POST">
        <div class="form-group">
          <label for="ca">Address:</label>
          <input type="text" id="address" name="address">
          <label for="ca">City:</label>
          <input type="text" id="city" name="city">
          <label for="ca">State:</label>
          <input type="text" id="state" name="state">
          <label for="ca">Zip:</label>
          <input type="text" id="zip" name="zip">
        </div>
        <button type="submit">Add House</button>
      </form>
    </div>
  </div>
  <div class="row">
    <!-- User House picks -->
    {{#each houseData}}
    <!-- first column -->
    <div class="col-4" id="eachHouse">
      <section id="content">
        <ul class="nav justify-content-end">
          <li class="nav-item">
            <a class="nav-link disabled" href="/edit/{{this.id}}">Edit</a>
          </li>
        </ul>

        <div>
          <br>
          <img class="housePhoto" src="https://s12.favim.com/610/160211/diy-projects-ice-cream-sticks-kid-crafts-diy-kid-crafts-Favim.com-3982097.jpg">
        </div>
        <div>
          <h3><span>Address:</span> {{this.address}} </h3>
        </div>
        <div>
          <h3><span>Price:</span> {{this.zestimate}}</h3>
        </div>
        <div>
          <h3><span>Sq Ft:</span> {{this.sqft}}</h3>
        </div>
        <div>
          <h3><span>Bedrooms:</span> {{this.bedrooms}}</h3>
        </div>

        {{#if this.kitchen}}
        <div>
          <h3><span>Kitchen:</span> {{this.kitchen}}</h3>
        </div>
        {{/if}}
        {{#if this.garage}}
        <div>
          <h3><span>Garage:</span> {{this.garage}}</h3>
        </div>
        {{/if}}
        {{#if this.remodel}}
        <div>
          <h3><span>Remodel:</span> {{this.remodel}}</h3>
        </div>
        {{/if}}
        {{#if this.schools}}
        <div>
          <h3><span>Schools:</span> {{this.schools}}</h3>
        </div>
        {{/if}}
        {{#if this.study}}
        <div>
          <h3><span>Study:</span> {{this.study}}</h3>
        </div>
        {{/if}}
        {{#if this.features}}
        <div>
          <h3><span>Features:</span> {{this.features}}</h3>
        </div>
        {{/if}}
        {{#if this.location}}
        <div>
          <h3><span>Location:</span> {{this.location}}</h3>
        </div>
        {{/if}}
        {{#if this.tax}}
        <div>
          <h3><span>Tax:</span> {{this.tax}}</h3>
        </div>
        {{/if}}
        {{#if this.sizes}}
        <div>
          <h3><span>Sizes:</span> {{this.sizes}}</h3>
        </div>
        {{/if}}


        <!-- User comments display  -->
        {{#if houseData.comment}}
        <!-- checking if there is user comment in DataBase -->
        {{#each houseData}}
        <div id="wrapper">
          <form action="/dashboard" method="post">
             <p><span>Comments:</span> {{house.comment}}</p>
          </form>
        </div>
        <br> {{/each}}
        <!--end of user comment display -->
        {{/if}}
        <!-- end of checking if there is user comment -->
      </section>
      <!-- content -->
    </div>
    <!--  col number 1 -->
    {{/each}}
    <!-- user house picks -->

  </div>
  <!--row -->
</div>
<!-- container -->
